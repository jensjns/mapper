body
    margin 0
    padding 0
#map
    position absolute
    top 0
    right 0
    bottom 0
    left 0
.ui
    position absolute
    top 10px
    z-index 100
    font-family 'Open Sans', sans-serif
    &#user-navigation
        right 10px
    &#color-picker
        left 46px
    ul 
        list-style none
        margin 0
        padding 0
    a 
        font-size 13px
        background #FFF
        color #3C4E5A
        display block
        margin 0
        padding 0
        border 1px solid #BBB
        padding 10px
        text-decoration none
        &:hover 
            background #ECF5FA
        &:active
            background #3887BE
            border-color #3887BE
            color #FFF
    li
        &.user
            a
                min-width 138px
                border-bottom-width 0
            &:last-child
                a 
                    border-bottom-width 1px
                    -webkit-border-radius 0 0 5px 5px
                    border-radius 0 0 5px 5px
            &:first-child
                a 
                    -webkit-border-radius 5px 5px 0 0
                    border-radius 5px 5px 0 0
        &.color
            display inline-block
            a
                border-right-width 0
                height 42px
                overflow hidden
                padding 5px 10px
            &:last-child
                a
                    border-right-width 1px
                    -webkit-border-radius 0 5px 5px 0
                    border-radius 0 5px 5px 0
            &:first-child
                a
                    border-left-width 1px
                    -webkit-border-radius 5px 0 0 5px
                    border-radius 5px 0 0 5px